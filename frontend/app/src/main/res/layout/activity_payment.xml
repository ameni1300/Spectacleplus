<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="65dp"

            android:scaleType="centerCrop"
            android:src="@drawable/img_4" />

        <TextView
            android:id="@+id/textTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SÃ©lectionnez les options de paiement"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Apple Pay Card -->
        <LinearLayout
            android:id="@+id/cardApplePay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:background="@drawable/payment_option_background"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_7"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payer avec visa "
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- MasterCard Card -->
        <LinearLayout
            android:id="@+id/cardMasterCard"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:background="@drawable/payment_option_background"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mastercard"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payer avec MasterCard"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- PayPal -->
        <LinearLayout
            android:id="@+id/cardPayPal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:background="@drawable/payment_option_background"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_5"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payer avec e-dinar smart"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Carte Jeune -->
        <LinearLayout
            android:id="@+id/cardCarteJeune"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/payment_option_background"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_6"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payer avec carte jeune"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Montant total -->
        <TextView
            android:id="@+id/textMontant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Montant Total: 30DT"
            android:textColor="#00FF00"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- Bouton -->
        <Button
            android:id="@+id/buttonPayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payer maintenant"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:enabled="false" />
    </LinearLayout>
</ScrollView>
